

@model List<Calificacion>
@using SistemadeGestionEscolar.Models

@{
    ViewBag.Title = "nuevasCalificaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Clase clase = ViewBag.clase;
}

<h2>asignarCalificaciones</h2>
<form action="nuevasCalificaciones" method="post">
    <div class="form-group">
        <select id="parcial" name="parcial">
            <option value="parcial1">Parcial 1</option>
            <option value="parcial2">Parcial 2</option>
            <option value="parcial3">Parcial 3</option>
            <option value="final">Final</option>
        </select>
    </div>

    <table class="table table-striped table-hover">
        <tr>
            <th>Nombre</th>
            <th>Calificacion</th>
        </tr>

        @foreach (var calificacion in Model)
        {

            @Html.Hidden("alumnoID", calificacion.alumno.Id)

            <tr>
                <td>@calificacion.alumno.nombre</td>
                <td>@Html.Editor("calificacion")</td>
            </tr>
        }
    </table>
    @Html.Hidden("claseID", clase.claseID)


    <div class="form-group col-sm-12">

        <button class="btn btn-primary" type="submit" value="Enviar">Enviar</button>

    </div>
</form>