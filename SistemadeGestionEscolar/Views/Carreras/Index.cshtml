@model IEnumerable<SistemadeGestionEscolar.Models.Carrera>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Carreras</h2>


<table id="myTable" class="table table-hover">

    <thead>
        <tr>
            <th>Nombre de Carrera</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>@item.NombreCarrera</td>

                <td>
                    @Html.ActionLink("Delete", "Delete", "Carreras", new { @id = item.carreraID }, new { @class = "btn btn-primary" })

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Carreras", new { @id = item.carreraID }, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Carreras", new { @id = item.carreraID }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<style>
    tr.even {
        background-color: #e6e6e6 !important;
    }
</style>

<link href="//cdn.datatables.net/1.10.12/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" rel="stylesheet" />

@section Scripts{
    <script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/1.10.12/js/dataTables.jqueryui.min.js"></script>
    <script src="//cdn.datatables.net/responsive/2.1.0/js/dataTables.responsive.min.js"></script>
    <script src="//cdn.datatables.net/responsive/2.1.0/js/responsive.jqueryui.min.js"></script>

    <script>
            $(document).ready(function () {
                $("#myTable").DataTable();
            });

    </script>
}