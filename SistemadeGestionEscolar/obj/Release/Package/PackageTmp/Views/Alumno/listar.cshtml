@model List<Alumno>
    @using SistemadeGestionEscolar.Models


@{
    ViewBag.Title = "listar";
}

<h2>listar</h2>

@Html.Partial("../BuscadorFormulario")

@if (User.IsInRole("Admin") || User.IsInRole("Capturista"))
{

    @Html.ActionLink("Crear Nuevo Alumno", "crear")
}





    <table class="table table-striped table-hover">
        <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Fecha de Nacimiento</th>
            <th>Carrera</th>
            
           

        </tr>

        @foreach (var alumno in Model)
        {
            <tr>

                <td>@alumno.nombre</td>
                <td>@alumno.apellidoPaterno</td>
                <td>@alumno.apellidoMaterno</td>
                <td>@alumno.fechaDeNacimiento.ToLongDateString()</td>
                <td>@alumno.carreraPreferida</td>
               
               
                



                @if (User.IsInRole("Admin"))
                {
                    <td>@Html.ActionLink("Eliminar", "eliminar", new { id = alumno.numeroMatricula })</td>
                }


                @if (User.IsInRole("Admin") || User.IsInRole("Capturista"))
                {
                    <td>@Html.ActionLink("Detalles", "DetallesAlumno", new { id = alumno.numeroMatricula })</td>

                    <td>@Html.ActionLink("Editar", "editar", new { id = alumno.numeroMatricula })</td>

                    <td> @Html.ActionLink("Inscribir", "editar", "Alumno", new { @id = alumno.numeroMatricula }, new { @class = "btn btn-primary" })</td>
                }
               
                
            </tr>

        }


    </table>
