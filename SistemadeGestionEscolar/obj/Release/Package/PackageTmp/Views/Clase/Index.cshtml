@model IEnumerable<SistemadeGestionEscolar.Models.Clase>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar una clase", "Create")
</p>
<table id="myTable" class="table table-hover">

    <thead>
        <tr>
            <th>Nombre Asignatura</th>
            <th>Nombre Grupo</th>
            <th>Nombre Profesor</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>@item.asignatura</td>
                <td>@item.grupo.nombreGrupo</td>
                <td>@item.profesor.nombre</td>

                <td>
                    @Html.ActionLink("Delete", "Delete", "Clase", new { @id = item.claseID }, new { @class = "btn btn-primary" })

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Clase", new { @id = item.claseID }, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Clase", new { @id = item.claseID }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    tr.even {
        background-color: #e6e6e6 !important;
    }
</style>

<link href="//cdn.datatables.net/1.10.12/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" rel="stylesheet" />

@section Scripts{
    <script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/1.10.12/js/dataTables.jqueryui.min.js"></script>
    <script src="//cdn.datatables.net/responsive/2.1.0/js/dataTables.responsive.min.js"></script>
    <script src="//cdn.datatables.net/responsive/2.1.0/js/responsive.jqueryui.min.js"></script>

    <script>
            $(document).ready(function () {
                $("#myTable").DataTable();
            });

    </script>
}