@model IEnumerable<SistemadeGestionEscolar.Models.Clase>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar una clase", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.asignatura.nombreAsignatura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.grupo.nombreGrupo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.profesor.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.asignatura.nombreAsignatura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.grupo.nombreGrupo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.profesor.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.claseID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.claseID }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.claseID })
        </td>
    </tr>
}

</table>
