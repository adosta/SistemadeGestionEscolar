@model SistemadeGestionEscolar.Models.Carrera

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Details</h2>

<div>
    <h4>Carrera</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombreCarrera)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCarrera)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Create New", "../grupo/Create")
</p>
<table class="table table-striped table-hover">
<tr>
    <th>Nombre del Grupo</th>
    <th></th>
</tr>

@foreach (var grupo in Model.grupo)
{
    <tr>

        <td>@(grupo.nombreGrupo)</td>
        <td>@Html.ActionLink("Eliminar", "eliminar", "Alumno", new { id = grupo.grupoID }, null)  </td>
        <td>@Html.ActionLink("Editar", "editar", "Alumno", new { id = grupo.grupoID }, null)  </td>
        <td>@Html.ActionLink("Detalles", "../grupo/details", new { id = grupo.grupoID })</td>
       
    </tr>
}


</table>




<p>

    @Html.ActionLink("Edit", "Edit", new { id = Model.carreraID })

    @Html.ActionLink("Back to List", "Index")

</p>
